root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 100
indent_style = space
indent_size = 2
continuation_indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.java]
# basic settings of Google Java Style Guide
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 100
indent_style = space
indent_size = 2
continuation_indent_size = 4
wildcard_import_limit = 999
indent_brace_style = K&R
